{
  "compilerOptions": {                                       
    "lib": ["dom", "dom.iterable", "esnext"],                                   
    "allowJs": true,                
    "jsx": "react-jsx",  
    "strict": true,                                 
    "noEmit": true,                              
    "moduleResolution": "node",  
    "resolveJsonModule": true,                       
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,   
    "esModuleInterop": true,                                    
    "skipLibCheck": true,                         
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
